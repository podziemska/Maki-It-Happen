<Window x:Class="Maki_it_happen.SalaGlowna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maki_it_happen"
        mc:Ignorable="d"
        Title="SalaGlowna" Height="450" Width="800">


    <!-- Tło okna -->
    <Window.Background>
        <ImageBrush ImageSource="/sala_glowna.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="576,0,0,0" Height="68" Width="146">
            <TextBlock x:Name="KasaLabel" Text="KASA: 100$" Foreground="#62B5B5" FontSize="24" FontWeight="Bold" Height="42" Width="147"/>
            <Label Content="nie widze sensu żeby tu był sklep wystarczy kasa"/>
        </StackPanel>

        <Button
            Grid.Row="2"
            Content="KUCHNIA"
            Click="Kuchnia"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="LightGray"
            Margin="0,70,11,0" Height="20" Width="55"/>

        <Button 
            Grid.Row="2"
            Content="PRZYJMIJ ZAMÓWIENIE"
            Background="White"
            Margin="18,1,646,33"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.257"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
