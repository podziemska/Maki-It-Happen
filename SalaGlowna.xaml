<Window x:Class="Maki_it_happen.SalaGlowna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maki_it_happen"
        mc:Ignorable="d"
        Title="SalaGlowna" Height="450" Width="800">

    <!-- Tło okna -->
    <Window.Background>
        <ImageBrush ImageSource="/sala główna.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Content="TUTAJ BĘDZIE SKLEP, DZIAŁAJĄCY"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>

        <Button
            Grid.Row="2"
            Content="KUCHNIA"
            Click="Kuchnia"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="LightGray"
            Margin="0,70,11,0"/>

        <Button 
            Grid.Row="1"
            Grid.RowSpan="2"
            Content="PRZYJMIJ ZAMÓWIENIE"
            Background="White"
            Margin="18,257,646,33"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.257"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
